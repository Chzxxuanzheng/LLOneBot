{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": false,
    "esModuleInterop": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    // "sourceMap": true,
    "noEmit": true
  },
  "include": ["src/*", "src/**/*", "scripts/*"],
  "exclude": ["node_modules"]
}
